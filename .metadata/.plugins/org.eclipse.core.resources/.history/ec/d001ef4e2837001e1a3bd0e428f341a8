package diet;

public class FoodMenu {
	String rice, soup, side, sideDish, toast, fruit, cereal;
	
	public FoodMenu() {
		super();
	}
	
	public FoodMenu(String toast, String cereal, String fruit) {
		super();
		this.toast = toast;
		this.cereal = cereal;
		this.fruit = fruit;
		System.out.println("아침마다 힘든 그대를 위해 오늘의 아침을 준비했어요\n오늘의 아침 식단은");
	}

	public FoodMenu(String rice, String soup, String side, String sideDish) {
		super();
		System.out.println("우리 모두 맛있는 저녁을 먹어요\n오늘의 저녁 식단은");
		this.rice = rice;
		this.soup = soup;
		this.side = side;
		this.sideDish = sideDish;
	}

	@Override
	public String toString() {
		return "DinnerMenu [rice=" + rice + ", soup=" + soup + ", side=" + side + ", sideDish=" + sideDish + "]";
	}
}
