package coffeeConfig;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import coffeeConfig.ingredient.Caramel;
import coffeeConfig.ingredient.CoffeeBean;
import coffeeConfig.ingredient.Milk;
import coffeeConfig.ingredient.Water;

@Configuration
public class Coffees {
	@Bean
	Water wt1() {
		return new Water(240);
	}
	
	@Bean
	Water wt2() {
		return new Water(70);
	}
	
	@Bean
	CoffeeBean cfB1() {
		return new CoffeeBean("콜롬비아", 80);
	}
	
	@Bean
	Milk mik1() {
		return new Milk(160);
	}
	
	@Bean
	Caramel crm1() {
		return new Caramel();
	}
	
	@Bean
	Coffee americano(CoffeeBean cfB1, Water wt1){
		return new Coffee("아메리카노", cfB1, wt1);
	}
	
//	@Bean
//	Coffee cafeLatte(CoffeeBean cfB1, Water wt2, Milk mik1){
//		return new Coffee("카페라떼", cfB1, wt2, mik1);
//	}
	
//	@Bean
//	Coffee caramelMacchiato(CoffeeBean cfb, Water wt2, Caramel crm){
//		return new Coffee("아메리카노", cfb, wt2, crm);
//	}
}
