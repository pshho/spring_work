package bicycleComponent;

import move.Action;

public class Bicycle implements Action {
	String name;
	Handle hd;
	Wheel whs;
	Basket bk;
	public Basket getBk() {
		return bk;
	}
	public void setBk(Basket bk) {
		this.bk = bk;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public Handle getHd() {
		return hd;
	}
	public void setHd(Handle hd) {
		this.hd = hd;
	}
	public Wheel getWhs() {
		return whs;
	}
	public void setWhs(Wheel wh) {
		this.whs = wh;
	}
	@Override
	public String toString() {
		return "Bicycle [name=" + name + ", hd=" + hd + ", wh=" + whs + ", bk=" + bk + "]";
	}
	@Override
	public void go() {
		System.out.println(name+"자전거가 간다");
	}
	@Override
	public void repair() {
		System.out.println(name+"자전거를 고친다");
	}
	@Override
	public void fall() {
		System.out.println(name+"자전거가 쓰러진다");
	}
}
