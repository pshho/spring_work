package figure.parts;

public class Circle {
	public int circleArea, circlePerimeter;

	public Circle() {
		super();
	}
	
	public int circleArea(int width, int height) {
		circleArea = (width+height)/2;
		return circleArea;
	}
	
	public int circlePerimeter(int width, int height, int hypotenuse) {
		circlePerimeter = width + height + hypotenuse; 
		return circlePerimeter;
	}
}
