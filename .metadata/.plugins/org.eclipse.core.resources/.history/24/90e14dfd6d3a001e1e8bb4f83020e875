package coffeeConfig;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import coffeeConfig.ingredient.Caramel;
import coffeeConfig.ingredient.CoffeeBean;
import coffeeConfig.ingredient.Milk;
import coffeeConfig.ingredient.Water;

@Configuration
public class Coffees {
	@Bean
	Water wt1() {
		return new Water(240);
	}
	
	@Bean
	Water wt2() {
		Water wt2 = new Water(70);
		wt2.setCapacity(70);
		return wt2;
	}
	
	@Bean
	CoffeeBean cfB1() {
		return new CoffeeBean("콜롬비아", 80);
	}
	
	@Bean
	Milk mik1() {
		return new Milk(160);
	}
	
	@Bean
	Caramel crm1() {
		return new Caramel();
	}
	
	@Bean
	Coffee americano(CoffeeBean cfb, Water wt1){
		return new Coffee("아메리카노", cfb, wt1);
	}
	
	@Bean
	Coffee cafeLatte(CoffeeBean cfb, Water wt2, Milk mik1){
		return new Coffee("카페라떼", cfb, wt2, mik1);
	}
	
	@Bean
	Coffee caramelMacchiato(CoffeeBean cfb, Water wt2, Caramel crm){
		return new Coffee("아메리카노", cfb, wt2, crm);
	}
}
