package orders.order;

import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

@Component
public class Restaurant {
	@Autowired
	Menu mu;
	
	int deliveryFee = 3000;
	
	public int getDeliveryFee() {
		return deliveryFee;
	}

	public int orderCalc(String kinds, String... menu) {
		Map<String, Map<String, Integer>> mmu = mu.getMenus();
		int price = 0;
		
		for(Map.Entry<String, Map<String, Integer>> me : mmu.entrySet()) {
			if(me.getKey().equals(kinds)) {
				for(String mme : menu) {
					if(me.getValue().containsKey(mme)) {
						price += Integer.parseInt(me.getValue().get(mme)+"");
					}
				}
			}
		}
		
		return price;
	}
	
	public String order(String kinds) {
		
		return null;
	}
}
