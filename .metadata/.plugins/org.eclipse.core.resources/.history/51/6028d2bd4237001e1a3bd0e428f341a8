package mobile;

public class Camera {
	String lensKinds, cameraKinds, shutter;
	
	public void setLensKinds(String lensKinds) {
		this.lensKinds = lensKinds;
	}
	public void setCameraKinds(String cameraKinds) {
		this.cameraKinds = cameraKinds;
	}
	public void setShutter(int shutter) {
		if(shutter == 0) {
			System.out.println("대기");
		}else if(shutter == 1) {
			System.out.println("촬영");
		}
		this.shutter = shutter;
	}
	@Override
	public String toString() {
		return "Camera [lensKinds=" + lensKinds + ", cameraKinds=" + cameraKinds + ", shutter=" + shutter + "]";
	}
}
