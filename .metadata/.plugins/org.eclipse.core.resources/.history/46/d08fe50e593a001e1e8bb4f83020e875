package anno_p;

import org.springframework.context.annotation.Bean;

import anno_p.com.Workstation;
import anno_p.com.sub1.Mouse;
import anno_p.comabc.Notebook;

public class Computers {
	// method를 bean으로 만듬
	@Bean
	Mouse hp920() {
		return new Mouse("HP920", "버티컬"); // Mouse 객체의 생성자 return method
	}
	
	@Bean
	Notebook gm1(){
		return new Notebook();
	}
	
	@Bean
	Workstation ws1() {
		return new Workstation("델1", null, null, null, hp920());
	}
	
	@Bean
	Workstation ws2() {
		return new Workstation("델1", null, null, null, null);
	}
}
