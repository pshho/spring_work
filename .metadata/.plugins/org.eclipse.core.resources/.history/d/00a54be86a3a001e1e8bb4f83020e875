package coffeeConfig;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import coffeeConfig.ingredient.Caramel;
import coffeeConfig.ingredient.CoffeeBean;
import coffeeConfig.ingredient.Milk;
import coffeeConfig.ingredient.Water;
import jakarta.annotation.Resource;

@Component
public class Coffee {
	String name;
	@Autowired
	CoffeeBean cfb;
	@Autowired
	Water wa;
	@Autowired
	Milk mik;
	@Resource
	Caramel crm;
	int price;
	
	public Coffee() {
		
	}
	public Coffee(String name, CoffeeBean cfb, Water wa) {
		super();
		this.name = name;
		this.cfb = cfb;
		this.wa = wa;
	}
	public Coffee(String name, CoffeeBean cfb, Water wa, Milk mik) {
		super();
		this.name = name;
		this.cfb = cfb;
		this.wa = wa;
		this.mik = mik;
	}
	public Coffee(String name, CoffeeBean cfb, Water wa, Caramel crm) {
		super();
		this.name = name;
		this.cfb = cfb;
		this.wa = wa;
		this.crm = crm;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public CoffeeBean getCfb() {
		return cfb;
	}
	public void setCfb(CoffeeBean cfb) {
		this.cfb = cfb;
	}
	public Water getWa() {
		return wa;
	}
	public void setWa(Water wa) {
		this.wa = wa;
	}
	public Milk getMik() {
		return mik;
	}
	public void setMik(Milk mik) {
		this.mik = mik;
	}
	public Caramel getCrm() {
		return crm;
	}
	public void setCrm(Caramel crm) {
		this.crm = crm;
	}
	@Override
	public String toString() {
		String msg = null;
		if(mik.getCapacity() == 0 && crm.getCapacity() == 0) {
			msg = "Coffee [name=" + name + ", cfb=" + cfb + ", wa=" + wa + "]";
		}else if(mik.getCapacity() != 0) {
			msg = "Coffee [name=" + name + ", cfb=" + cfb + ", wa=" + wa + ", mik=" + mik + "]";
		}
		
		return msg;
	}
}
