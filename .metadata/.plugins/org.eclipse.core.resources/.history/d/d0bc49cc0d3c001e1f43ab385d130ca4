package figure.parts;

import org.springframework.stereotype.Component;

@Component
public class Rectangle {
	int width, height;
	public int area, perimeter;
	
	public Rectangle(int width, int height) {
		super();
		this.width = width;
		this.height = height;
		this.area = setArea(width, height);
		this.perimeter = setPerimeter(width, height);
	}
	
	public int setArea(int width, int height) {
		return width*height;
	}
	
	public int setPerimeter(int width, int height) {
		return (width + height) * 2;
	}
}
