package coffeeAssignment.coffeeKinds;

import org.springframework.stereotype.Component;

import coffeeAssignment.CoffeeInterface;

@Component
public class Americano implements CoffeeInterface {
	String kinds = "콜롬비아";
	int coffeeBeans = 70;
	int water = 180;
	int price = 2000;
	
	@Override
	public String toString() {
		return "Americano [kinds=" + kinds + ", coffeeBeans=" + coffeeBeans + ", water=" + water + ", price=" + price
				+ "]";
	}

	@Override
	public void make() {
		System.out.println("이 커피는 " + kinds + "원두를 씁니다.");
		System.out.println("그리고 물과 에스프레소가 들어갑니다.");
	}

	@Override
	public void sell() {
		
	}

	@Override
	public void event() {
		// TODO Auto-generated method stub
		
	}
}
