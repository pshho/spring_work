package figure.parts;

public class RightTriangle {
	public int rigTriArea, rigTriPerimeter;

	public RightTriangle() {
		super();
	}
	
	public int areaRigTri(int width, int height) {
		rigTriArea = (width+height)/2;
		return rigTriArea;
	}
	
	public int perimeterRigTri(int width, int height, int hypotenuse) {
		rigTriPerimeter = width + height + hypotenuse; 
		return rigTriPerimeter;
	}
}
