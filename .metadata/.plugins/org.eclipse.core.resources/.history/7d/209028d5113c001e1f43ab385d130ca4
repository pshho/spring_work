package figure.parts;

public class RightTriangle {
	public int rigTriArea, rigTriPerimeter;

	public RightTriangle() {
		super();
	}
	
	public int rigTriArea(int width, int height) {
		rigTriArea = width*height;
		return rigTriArea;
	}
	
	public int rigTriPerimeter(int width, int height, int hypotenuse) {
		rigTriPerimeter = (width + height) * 2; 
		return rigTriPerimeter;
	}
}
