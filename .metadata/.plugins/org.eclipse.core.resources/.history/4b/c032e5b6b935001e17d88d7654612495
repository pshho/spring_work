package bicycleComponent;

import java.util.Arrays;

import move.Action;

public class ThreeBicycle implements Action {
	String name;
	Handle hd;
	Wheel[] whs;
	Basket bk;
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public Handle getHd() {
		return hd;
	}
	public void setHd(Handle hd) {
		this.hd = hd;
	}
	public Wheel[] getWhs() {
		return whs;
	}
	public void setWhs(Wheel[] whs) {
		this.whs = whs;
	}
	public Basket getBk() {
		return bk;
	}
	public void setBk(Basket bk) {
		this.bk = bk;
	}
	@Override
	public String toString() {
		return "Bicycle [name=" + name + ", hd=" + hd + ", whs=" + Arrays.toString(whs) + ", bk=" + bk + "]";
	}
	@Override
	public void go() {
		System.out.println(name+"가 천천히 가서 아이들이 좋아해요");
	}
	@Override
	public void repair() {
		System.out.println(name+"를 고친다");
	}
	@Override
	public void fall() {
		System.out.println(name+"가 쓰러진다");
	}
}
