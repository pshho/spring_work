package figure.main;

import org.springframework.context.support.AbstractApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

import figure.Figure;

public class FigureMain {

	public static void main(String[] args) {
		AbstractApplicationContext context =
				new ClassPathXmlApplicationContext("aop_xml/figure.xml");
		
		Figure fig = context.getBean("figure", Figure.class);
		fig.rect.rectArea(5, 4);
		fig.rect.rectPerimeter(5, 4);
		fig.rigTri.rigTriArea(4, 3);
		fig.rigTri.rigTriPerimeter(4, 3, 5);
		fig.circle.circleArea(8);
		fig.circle.circlePerimeter(8);
		System.out.println("직사각형 넓이: " + fig.rect.rectArea + ", 직사각형 둘레: " + fig.rect.rectPerimeter);
		System.out.println("직각삼각형 넓이: " + fig.rigTri.rigTriArea + ", 직각삼각형 둘레: " + fig.rigTri.rigTriPerimeter);
		System.out.println("원의 넓이: " + fig.circle.circleArea + ", 원의 둘레: " + fig.circle.circlePerimeter);
	}

}
