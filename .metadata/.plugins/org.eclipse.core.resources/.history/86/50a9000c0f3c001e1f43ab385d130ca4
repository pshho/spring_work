package figure.parts;

import org.springframework.stereotype.Component;

@Component
public class Rectangle {
	int width, height;
	public int area, perimeter;
	
	
	public Rectangle() {
		super();
	}

	public Rectangle(int width, int height) {
		super();
		this.width = width;
		this.height = height;
		this.area = calcArea(width, height);
		this.perimeter = calcPerimeter(width, height);
	}
	
	public int calcArea(int width, int height) {
		return width*height;
	}
	
	public int calcPerimeter(int width, int height) {
		return (width + height) * 2;
	}
}
